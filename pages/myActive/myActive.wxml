       </swiper-item>

       <swiper-item wx:key="{{3}}"  >
         <scroll-view scroll-y="{{true}}"  bindscrolltolower="scrollbot"> 
           

         </scroll-view>
       </swiper-item>

   </swiper> 



</view>
