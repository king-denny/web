.academy-container{
  display: flex;
  flex-direction: column;      
}
.navbar{
  display: flex;
  position: relative;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 40px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 14px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 16rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #1f4e79;
  color: #1f4e79;
}

