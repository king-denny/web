.search-container{
  display: flex;  
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #ddd;
}

.search-left{
  background-color: #eee;
  flex: 2;
  border-radius: 30rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.search-left image{
  width: 88rpx;
  height: 68rpx;
  padding: 10rpx 20rpx;
  vertical-align: middle;   
}
.search-left input{
  display: inline-block;
  vertical-align: middle;
  height: 70rpx;
  width: calc(100% - 88rpx);
}
.search-right{
  padding-left: 20rpx;
}
.search-right image{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}


